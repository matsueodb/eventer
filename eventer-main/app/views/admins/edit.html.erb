<h1>Update User</h1>

<%= form_tag admin_path, :method => :put do %>
<% p @user %>
  <div class="field">
    <%= t('name') %>:<%= text_field_tag :name, @user.name%>
  </div>
  <div class="field">
    <%= t('email') %>:<%= text_field_tag :email, @user.email %>
  </div>
  <div class="field">
    <%= t('login_id') %>:<%= text_field_tag :login_id, @user.login_id%>
  </div>
  <div class="field">
    <%= t('password') %>:<%= text_field_tag :password %>
  </div>
  <div class="field">
    <%= t('auth') %><br>
    <% auths =  %w[admin eventer commercial user].map(&:capitalize) %>
    <% auths.each do |a| %>
    <% c = @user.roles.any?{|r| r.name.capitalize == a} ? 'checked' : '' %>
    <%= check_box "auth", a, :class =>"auth",:checked => c %>
    <%= a %>
    <% end %>
  </div>

  <div class="actions">
    <%= submit_tag t('action.update') %>
  </div>
<% end %>
<%= link_to 'Back', admins_path %>
